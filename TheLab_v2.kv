ScreenManager:
    WelcomePage1:
    WelcomePage2:
    FirstStage:
    SecondStage:

<WelcomePage1>:
    name: 'welcome_page1'
    ImageButton:
        source: './images/Temple1_withoutWord.png'
        on_press: root.manager.current = 'welcome_page2'
    MDLabel:
        text: "請點擊圖片"
        font_name: './fonts/msjh.ttc'
        font_size: '60sp'
        pos_hint: {'center_x':0.5,'center_y':0.2}
        halign: 'center'
        color: 1,0,0,1

<WelcomePage2>:
    name: 'welcome_page2'
    ImageButton:
        source: './images/Temple1_withWord.png'
        on_press: root.manager.current = 'first_stage'
    


<FirstStage>:
    name: 'first_stage'
    MDBoxLayout:
	    orientation: 'vertical'
        MDLabel: 
            text: 'Picture'
            halign: 'center'
        MDRectangleFlatButton:
            text: 'Click me'
            on_press: root.on_button_click()
            pos_hint: {'center_x':0.5,'center_y':0.7}
        MDRectangleFlatButton:
            text: 'Stop play sound'
            on_press: root.stop_sound()
            pos_hint: {'center_x':0.5,'center_y':0.6}
        MDRectangleFlatButton:
            text: 'Second stage'
            on_press: root.manager.current = 'second_stage'
            pos_hint: {'center_x':0.5,'center_y':0.5}
        MDLabel:
            text: root.my_text
            halign: 'center'
            font_size: '30sp'

<SecondStage>:
    name: 'second_stage'
    MDLabel:
        text: 'Welcome to second stage'
        halign: 'center'
    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press: 
            root.manager.current = 'first_stage'
            root.manager.transition.direction = 'right'